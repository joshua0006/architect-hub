rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Helper functions
    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }

    function isAdmin() {
      return isSignedIn() &&
        get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'Admin';
    }

    function isStaff() {
      return isSignedIn() &&
        get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'Staff';
    }

    function isProjectMember(projectId) {
      return isSignedIn() &&
        exists(/databases/$(database)/documents/projects/$(projectId)/team/$(request.auth.uid));
    }

    function hasRole(projectId, role) {
      return isSignedIn() &&
        get(/databases/$(database)/documents/projects/$(projectId)/team/$(request.auth.uid)).data.role == role;
    }

    // Users collection
    match /users/{userId} {
      allow read: if isSignedIn();
      allow create: if isSignedIn() && request.auth.uid == userId;
      allow update: if isOwner(userId);
      allow delete: if false; // Prevent user deletion
    }

    // User Groups collection
    match /userGroups/{groupId} {
      allow read: if isSignedIn();
      allow create, update, delete: if isAdmin() || isStaff();
    }

    // Permissions collection
    match /permissions/{permissionId} {
      allow read: if isSignedIn();
      allow create, update, delete: if isAdmin();
    }

    // Access Logs collection
    match /accessLogs/{logId} {
      allow read: if isAdmin();
      allow create: if isSignedIn();
      allow update, delete: if false; // Prevent modification of access logs
    }

    // Organization settings
    match /settings/organization {
      allow read: if isSignedIn();
      allow write: if isAdmin();
    }

    // Projects collection
    match /projects/{projectId} {
      allow read: if isSignedIn() && (
        isAdmin() ||
        isStaff() ||
        isProjectMember(projectId)
      );
      allow create: if isAdmin() || isStaff();
      allow update: if isSignedIn() && (
        isAdmin() ||
        hasRole(projectId, 'admin') ||
        hasRole(projectId, 'manager')
      );
      allow delete: if isAdmin() || hasRole(projectId, 'admin');

      // Team members subcollection
      match /team/{userId} {
        allow read: if isSignedIn() && (
          isAdmin() ||
          isStaff() ||
          isProjectMember(projectId)
        );
        allow write: if isAdmin() || isStaff() || hasRole(projectId, 'admin');
      }
    }

    // Folders collection
    match /folders/{folderId} {
      allow read: if isSignedIn() && (
        isAdmin() ||
        isStaff() ||
        isProjectMember(resource.data.projectId)
      );
      allow create: if isSignedIn() && (
        isAdmin() ||
        isStaff() ||
        isProjectMember(request.resource.data.projectId)
      );
      allow update: if isSignedIn() && (
        isAdmin() ||
        isStaff() ||
        hasRole(resource.data.projectId, 'admin') ||
        hasRole(resource.data.projectId, 'manager')
      );
      allow delete: if isAdmin() || isStaff() || hasRole(resource.data.projectId, 'admin');

      // Documents subcollection
      match /documents/{documentId} {
        allow read: if isSignedIn() && (
          isAdmin() ||
          isStaff() ||
          isProjectMember(get(/databases/$(database)/documents/folders/$(folderId)).data.projectId)
        );
        allow create: if isSignedIn() && (
          isAdmin() ||
          isStaff() ||
          isProjectMember(get(/databases/$(database)/documents/folders/$(folderId)).data.projectId)
        );
        allow update: if isSignedIn() && (
          isAdmin() ||
          isStaff() ||
          hasRole(get(/databases/$(database)/documents/folders/$(folderId)).data.projectId, 'admin') ||
          hasRole(get(/databases/$(database)/documents/folders/$(folderId)).data.projectId, 'manager') ||
          request.auth.uid == resource.data.createdBy
        );
        allow delete: if isAdmin() || isStaff() || hasRole(get(/databases/$(database)/documents/folders/$(folderId)).data.projectId, 'admin');
      }
    }

    // Tasks collection
    match /tasks/{taskId} {
      allow read: if isSignedIn() && (
        isAdmin() ||
        isStaff() ||
        isProjectMember(resource.data.projectId)
      );
      allow create: if isSignedIn() && (
        isAdmin() ||
        isStaff() ||
        isProjectMember(request.resource.data.projectId)
      );
      allow update: if isSignedIn() && (
        isAdmin() ||
        isStaff() ||
        isProjectMember(resource.data.projectId) &&
        (
          resource.data.assignedTo == request.auth.uid ||
          hasRole(resource.data.projectId, 'manager') ||
          hasRole(resource.data.projectId, 'admin')
        )
      );
      allow delete: if isAdmin() || isStaff() ||
        hasRole(resource.data.projectId, 'admin') ||
        hasRole(resource.data.projectId, 'manager');
    }

    // Milestones collection
    match /milestones/{milestoneId} {
      allow read: if isSignedIn() && (
        isAdmin() ||
        isStaff() ||
        isProjectMember(resource.data.projectId)
      );
      allow create: if isSignedIn() && (
        isAdmin() ||
        isStaff() ||
        isProjectMember(request.resource.data.projectId)
      );
      allow update, delete: if isSignedIn() && (
        isAdmin() ||
        isStaff() ||
        hasRole(resource.data.projectId, 'admin') ||
        hasRole(resource.data.projectId, 'manager')
      );
    }

    // Notifications collection
    match /notifications/{notificationId} {
      // Users can read and update their own notifications
      allow read: if isSignedIn() && request.auth.uid == resource.data.userId;

      // Allow creating notifications targeting a specific user
      allow create: if isSignedIn() &&
        (request.resource.data.userId != null);

      // Allow updating a notification (e.g., marking as read) if you own it
      allow update: if isSignedIn() && request.auth.uid == resource.data.userId;

      // Allow deleting a notification if you own it
      allow delete: if isSignedIn() && request.auth.uid == resource.data.userId;
    }

    // Documents collection
    match /documents/{documentId} {
      allow read: if isSignedIn() && (
        isAdmin() ||
        isStaff() ||
        isProjectMember(resource.data.projectId) ||
        resource.data.createdBy == 'guest'
      );
      allow create: if (
        // Authenticated users
        isSignedIn() && (
          isAdmin() ||
          isStaff() ||
          isProjectMember(request.resource.data.projectId)
        )
      )
      ||
      (
        // Guest uploads with valid upload token
        request.resource.data.createdBy == 'guest' &&
        request.resource.data.keys().hasAny(['uploadedWithToken']) &&
        exists(/databases/$(database)/documents/uploadTokens/$(request.resource.data.uploadedWithToken))
      );
      allow update: if isSignedIn() && (
        isAdmin() ||
        isStaff() ||
        hasRole(resource.data.projectId, 'admin') ||
        hasRole(resource.data.projectId, 'manager') ||
        request.auth.uid == resource.data.createdBy
      );
      allow delete: if isAdmin() || isStaff() || hasRole(resource.data.projectId, 'admin');

      // Comments subcollection for document
      match /comments/{commentId} {
        allow read: if isSignedIn() && exists(/databases/$(database)/documents/documents/$(documentId));
        allow create: if isSignedIn() && exists(/databases/$(database)/documents/documents/$(documentId));
        allow update, delete: if isSignedIn() && request.auth.uid == resource.data.userId;
      }
    }

    // Document Annotations collection
    match /documentAnnotations/{documentId} {
      // Allow read access to any user who can view the document
      allow read: if isSignedIn() && exists(/databases/$(database)/documents/documents/$(documentId)) &&
        (isAdmin() ||
         isStaff() ||
         isProjectMember(get(/databases/$(database)/documents/documents/$(documentId)).data.projectId));

      // Allow write access to users who can edit the document
      allow write: if isSignedIn() && exists(/databases/$(database)/documents/documents/$(documentId)) &&
        (isAdmin() ||
         isStaff() ||
         hasRole(get(/databases/$(database)/documents/documents/$(documentId)).data.projectId, 'admin') ||
         hasRole(get(/databases/$(database)/documents/documents/$(documentId)).data.projectId, 'manager') ||
         request.auth.uid == get(/databases/$(database)/documents/documents/$(documentId)).data.createdBy);
    }

    // Transmittals collection
    match /transmittals/{projectId} {
      // Transmittal documents subcollection
      match /documents/{documentId} {
        allow read: if isSignedIn() && (
          isAdmin() ||
          isStaff() ||
          isProjectMember(projectId)
        );
        allow create, update: if isSignedIn() && (
          isAdmin() ||
          isStaff() ||
          isProjectMember(projectId)
        );
        allow delete: if isAdmin() || isStaff() ||
          hasRole(projectId, 'admin') ||
          hasRole(projectId, 'manager');
      }

      // Transmittal history subcollection
      match /history/{historyId} {
        allow read: if isSignedIn() && (
          isAdmin() ||
          isStaff() ||
          isProjectMember(projectId)
        );
        allow create: if isSignedIn() && (
          isAdmin() ||
          isStaff() ||
          isProjectMember(projectId)
        );
        allow update, delete: if false; // History entries should not be modified or deleted
      }

      // Standalone transmittal entries subcollection
      match /standalone/{entryId} {
        allow read: if isSignedIn() && (
          isAdmin() ||
          isStaff() ||
          isProjectMember(projectId)
        );
        allow create: if isSignedIn() && (
          isAdmin() ||
          isStaff() ||
          isProjectMember(projectId)
        );
        allow update: if isSignedIn() && (
          isAdmin() ||
          isStaff() ||
          hasRole(projectId, 'admin') ||
          hasRole(projectId, 'manager') ||
          request.auth.uid == resource.data.createdBy
        );
        allow delete: if isAdmin() || isStaff() ||
          hasRole(projectId, 'admin') ||
          hasRole(projectId, 'manager');
      }
    }

    // Upload Tokens collection (for guest uploads)
    match /uploadTokens/{tokenId} {
      // Allow anyone (including guests) to read tokens - needed for guest upload validation
      allow read: if true;

      // Allow authenticated users to create upload tokens
      allow create: if isSignedIn();

      // Allow anyone to update only the usedCount field (for tracking guest uploads)
      // This is necessary because guests need to increment the count when uploading
      allow update: if request.resource.data.diff(resource.data).affectedKeys().hasOnly(['usedCount']);

      // Allow admins, staff, or the token creator to delete tokens
      allow delete: if isSignedIn() && (
        isAdmin() ||
        isStaff() ||
        request.auth.uid == resource.data.createdBy
      );
    }
  }
}
